<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <RelativeLayout
        android:id="@+id/content_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/large_placeholder_avatar"
            android:layout_centerHorizontal="true"
            android:scaleType="centerInside"/>


        <TextView
            android:id="@+id/title_avatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Avatar name"
            android:layout_below="@+id/img_avatar"
            android:textColor="@color/victoria"
            android:textSize="18sp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/subtitle_avatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Lorem input"
            android:layout_below="@+id/title_avatar"
            android:textColor="@color/quilmes"
            android:textSize="16sp"
            android:textAlignment="center"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <ImageView
            android:id="@+id/img_avatar_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/large_placeholder_avatar"
            android:layout_centerHorizontal="true"
            android:scaleType="centerInside"
            android:layout_alignParentStart="true"/>


        <TextView
            android:id="@+id/title_avatar_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Avatar name"
            android:textColor="@color/victoria"
            android:textSize="18sp"
            android:textAlignment="viewStart"
            android:layout_toEndOf="@id/img_avatar_horizontal"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/subtitle_avatar_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Lorem input"
            android:layout_below="@+id/title_avatar_horizontal"
            android:textColor="@color/quilmes"
            android:textSize="16sp"
            android:textAlignment="viewStart"
            android:layout_toEndOf="@id/img_avatar_horizontal"
           />

    </RelativeLayout>


</RelativeLayout>