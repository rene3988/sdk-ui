<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/button_primary"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@drawable/button_round"
        android:orientation="horizontal"
        android:visibility="visible">

        <!-- Botón -->
        <TextView
            android:id="@+id/button_text_primary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            tools:text="Button"
            android:textAppearance="@style/bot_n"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="18sp"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_secondary"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@drawable/button_round"
        android:orientation="horizontal"
        android:layout_below="@+id/button_primary"
        android:gravity="center">

        <ImageView
            android:id="@+id/button_icon_secondary"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_info"
            android:padding="12dp"
            android:tint="@color/white"/>

        <!-- Botón -->
        <TextView
            android:id="@+id/button_text_secondary"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:text="Button"
            android:textAppearance="@style/bot_n"
            android:textSize="18sp"
            android:gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/button_round"
        android:orientation="horizontal"
        android:layout_below="@+id/button_primary"
        android:gravity="center">

        <ImageView
            android:id="@+id/button_icon_only"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_info"
            android:padding="12dp"
            android:tint="@color/white"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_text"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@drawable/button_round"
        android:orientation="horizontal"
        android:layout_below="@+id/button_primary"
        android:gravity="center">

        <!-- Botón -->
        <TextView
            android:id="@+id/button_text_only"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:text="Button"
            android:textAppearance="@style/bot_n"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:padding="12dp"/>


    </LinearLayout>


</RelativeLayout>