<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">

    <RelativeLayout
        android:id="@+id/contenOnlyImage"
        android:layout_width="328dp"
        android:layout_height="140dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imageOnlyImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/photoholder_cardview"
            android:layout_centerHorizontal="true"
            android:scaleType="centerInside"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/contenFullWithImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <android.support.v7.widget.CardView
            android:layout_width="328dp"
            android:layout_height="304dp"
            card_view:cardCornerRadius="8dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp">

                <TextView
                    android:id="@+id/titleFullWithImage"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:textAppearance="@style/t_tulo"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    tools:text="@string/empty_title"
                    />

                <ImageView
                    android:id="@+id/imageFullWithImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/photoholder_cardview"
                    android:scaleType="centerInside"
                    android:layout_below="@id/titleFullWithImage"/>

                <TextView
                    android:id="@+id/descriptionFullWithImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/lorem_ipsum"
                    android:textStyle="normal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="12dp"
                    tools:text="@string/empty_description"
                    android:maxLines="4"
                    android:layout_below="@+id/imageFullWithImage"/>

                <TextView
                    android:id="@+id/captionFullWithImage"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:textAppearance="@style/caption"
                    android:textStyle="normal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_below="@+id/descriptionFullWithImage"
                    tools:text="@string/empty_caption"/>

            </RelativeLayout>


        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/contenFullWithImageBorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <android.support.v7.widget.CardView
            android:id="@+id/cardMaskFullWithImageBorder"
            android:layout_width="328dp"
            android:layout_height="304dp"
            android:layout_gravity="center"
            card_view:cardBackgroundColor="@color/victoria"
            card_view:cardCornerRadius="6dp"
            card_view:contentPadding="1dp">

            <android.support.v7.widget.CardView
                android:layout_width="324dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                card_view:cardCornerRadius="6dp"
                card_view:contentPadding="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:id="@+id/titleFullWithImageBorder"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:textAppearance="@style/t_tulo"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        tools:text="@string/empty_title"
                        />

                    <ImageView
                        android:id="@+id/imageFullWithImageBorder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/photoholder_cardview"
                        android:scaleType="centerInside"
                        android:layout_below="@id/titleFullWithImageBorder"/>

                    <TextView
                        android:id="@+id/descriptionFullWithImageBorder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/lorem_ipsum"
                        android:textStyle="normal"
                        android:gravity="center_vertical"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginTop="12dp"
                        tools:text="@string/empty_description"
                        android:maxLines="4"
                        android:layout_below="@+id/imageFullWithImageBorder"/>

                    <TextView
                        android:id="@+id/captionFullWithImageBorder"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:textAppearance="@style/caption"
                        android:textStyle="normal"
                        android:gravity="center_vertical"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:layout_below="@+id/descriptionFullWithImageBorder"
                        tools:text="@string/empty_caption"/>

                </RelativeLayout>


            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/contenSquareOnlyImage"
        android:layout_width="80dp"
        android:layout_height="88dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imageSquareOnlyImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/photoholder_cardview"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/contenSquareIconCenter"
        android:layout_width="156dp"
        android:layout_height="144dp"
        android:visibility="gone">


        <android.support.v7.widget.CardView
            android:layout_width="156dp"
            android:layout_height="144dp"
            card_view:cardCornerRadius="8dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">

                    <ImageView
                        android:id="@+id/iconSquareIconCenter"
                        android:layout_width="48dp"
                        android:layout_height="44dp"
                        android:src="@drawable/heartic_holder_medium"
                        android:layout_centerHorizontal="true"
                        android:scaleType="fitCenter"
                        android:layout_marginTop="30dp"/>

                    <TextView
                        android:id="@+id/titleSquareIconCenter"
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:textAppearance="@style/t_tulo"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:layout_below="@+id/iconSquareIconCenter"
                        tools:text="@string/empty_title"
                        android:textSize="12sp"
                        android:layout_marginTop="18dp"/>

                    <TextView
                        android:id="@+id/subtitleSquareIconCenter"
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:textAppearance="@style/t_tulo"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:layout_below="@+id/titleSquareIconCenter"
                        tools:text="@string/empty_title"
                        android:textSize="16sp"/>

            </RelativeLayout>


        </android.support.v7.widget.CardView>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/contenSquareIconLeft"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:visibility="visible">


        <android.support.v7.widget.CardView
            android:layout_width="156dp"
            android:layout_height="144dp"
            card_view:cardCornerRadius="8dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">

                <TextView
                    android:id="@+id/captionSquareIconLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:textAppearance="@style/caption"
                    android:textStyle="normal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="57dp"
                    android:layout_marginTop="16dp"
                    tools:text="@string/empty_caption"/>


                <ImageView
                    android:id="@+id/iconSquareIconLeft"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/heartic_holder_medium"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="16dp"/>

                <TextView
                    android:id="@+id/titleSquareIconLeft"
                    android:layout_width="match_parent"
                    android:layout_height="21dp"
                    android:textAppearance="@style/t_tulo"
                    android:layout_marginStart="57dp"
                    android:layout_marginEnd="12dp"
                    android:layout_below="@+id/captionSquareIconLeft"
                    tools:text="@string/empty_title"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/descriptionSquareIconLeft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/lorem_ipsum"
                    android:textStyle="normal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="57dp"
                    android:layout_marginEnd="12dp"
                    tools:text="@string/empty_description"
                    android:maxLines="2"
                    android:layout_below="@+id/titleSquareIconLeft"/>

            </RelativeLayout>


        </android.support.v7.widget.CardView>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/contenMediumWithImage"
        android:layout_width="328dp"
        android:layout_height="224dp"
        android:visibility="gone">

        <android.support.v7.widget.CardView
            android:layout_width="328dp"
            android:layout_height="304dp"
            card_view:cardCornerRadius="8dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp">

                <TextView
                    android:id="@+id/titleMediumWithImage"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textAppearance="@style/t_tulo"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="14dp"
                    tools:text="@string/empty_title"
                    android:layout_marginTop="14dp"/>


                <TextView
                    android:id="@+id/captionMediumWithImage"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:textAppearance="@style/caption"
                    android:textStyle="normal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="14dp"
                    android:textSize="9sp"
                    android:layout_below="@+id/titleMediumWithImage"
                    tools:text="@string/empty_caption"/>

                <TextView
                    android:id="@+id/descriptionMediumWithImage"
                    android:layout_width="200dp"
                    android:layout_height="88dp"
                    android:textAppearance="@style/lorem_ipsum"
                    android:textStyle="normal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="14dp"
                    android:layout_marginTop="10dp"
                    tools:text="@string/empty_description"
                    android:maxLines="5"
                    android:layout_below="@+id/captionMediumWithImage"/>



                <ImageView
                    android:id="@+id/imageMediumWithImage"
                    android:layout_width="80dp"
                    android:layout_height="85dp"
                    android:src="@drawable/photoholder_cardview"
                    android:scaleType="center"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/captionMediumWithImage"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="14dp"/>

                <Button
                    android:id="@+id/buttonMediumWithImage"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    tools:text="Text"
                    android:background="@android:color/transparent"
                    android:textSize="14sp"
                    android:layout_marginStart="13dp"
                    android:layout_marginBottom="8dp"
                    android:layout_alignParentBottom="true"
                    android:textAllCaps="false"
                    android:textColor="@color/corona"
                    android:textStyle="normal"
                    android:textAlignment="viewStart"
                    android:gravity="left|center_vertical"
                    tools:ignore="RtlCompat" />

            </RelativeLayout>


        </android.support.v7.widget.CardView>

    </RelativeLayout>



</RelativeLayout>